{
  "name": "weave-cursor",
  "displayName": "Weave AI Assistant for Cursor",
  "description": "VS Code extension for Weave - Adapted for Cursor IDE with enhanced AI features",
  "version": "0.1.0",
  "publisher": "KitiumAI",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "weave",
    "ai",
    "cursor",
    "code-completion",
    "prompts",
    "framework",
    "anthropic"
  ],
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/weave.git",
    "directory": "packages/cursor-extension"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:weave.cursorChat",
    "onCommand:weave.inlineEdit",
    "onCommand:weave.generatePrompt",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "weave.cursorChat",
        "title": "Weave: Chat with AI",
        "description": "Open Weave chat panel for conversations"
      },
      {
        "command": "weave.inlineEdit",
        "title": "Weave: Inline Edit",
        "description": "Edit code inline with AI assistance"
      },
      {
        "command": "weave.generatePrompt",
        "title": "Weave: Generate Prompt",
        "description": "Generate an optimized prompt for selected code"
      },
      {
        "command": "weave.analyzeCode",
        "title": "Weave: Analyze Code",
        "description": "Analyze the current code with AI insights"
      },
      {
        "command": "weave.suggestOptimization",
        "title": "Weave: Suggest Optimization",
        "description": "Get AI-powered optimization suggestions"
      },
      {
        "command": "weave.cursorAI",
        "title": "Weave: Toggle AI Features",
        "description": "Enable/disable Weave AI features"
      }
    ],
    "keybindings": [
      {
        "command": "weave.cursorChat",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/"
      },
      {
        "command": "weave.inlineEdit",
        "key": "ctrl+k ctrl+i",
        "mac": "cmd+k cmd+i"
      },
      {
        "command": "weave.generatePrompt",
        "key": "ctrl+shift+w p",
        "mac": "cmd+shift+w p"
      }
    ],
    "configuration": {
      "title": "Weave AI Assistant for Cursor",
      "properties": {
        "weave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Weave AI features"
        },
        "weave.provider": {
          "type": "string",
          "enum": [
            "anthropic",
            "openai",
            "local"
          ],
          "default": "anthropic",
          "description": "AI provider (Cursor optimized for Anthropic)"
        },
        "weave.model": {
          "type": "string",
          "default": "claude-3-opus-20240229",
          "description": "Claude model to use"
        },
        "weave.apiKey": {
          "type": "string",
          "description": "Anthropic API key for Weave"
        },
        "weave.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for AI responses"
        },
        "weave.maxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "description": "Maximum tokens per response"
        },
        "weave.cursorFeatures": {
          "type": "object",
          "default": {
            "chat": true,
            "inlineEdit": true,
            "autoComplete": true,
            "docGeneration": true,
            "refactoring": true
          },
          "description": "Enable/disable Cursor-specific features"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@weaveai/core": "1.1.0"
  }
}
