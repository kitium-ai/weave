# Weave Sample App Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# AI Provider Configuration
# ============================================================================

# Default provider: openai, anthropic, or google
VITE_WEAVE_PROVIDER=openai

# API Key for your chosen provider
# Get from: https://platform.openai.com/api-keys (OpenAI)
#           https://console.anthropic.com/ (Anthropic)
#           https://aistudio.google.com/app/apikey (Google)
VITE_WEAVE_API_KEY=your_api_key_here

# Model to use with the provider
# OpenAI: gpt-4, gpt-3.5-turbo
# Anthropic: claude-3-opus, claude-3-sonnet, claude-3-haiku
# Google: gemini-pro, gemini-pro-vision
VITE_WEAVE_MODEL=gpt-4

# ============================================================================
# Backend Configuration
# ============================================================================

# Backend server port
BACKEND_PORT=3000

# Backend API base URL (for frontend requests)
VITE_API_BASE_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================================================
# Database Configuration (if adding persistence)
# ============================================================================

# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/weave_app
DATABASE_URL=postgresql://localhost/weave_app

# ============================================================================
# Cache Configuration
# ============================================================================

# Enable response caching
ENABLE_CACHING=true

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# Max cache entries
CACHE_MAX_SIZE=1000

# ============================================================================
# Budget & Cost Configuration
# ============================================================================

# Enable cost tracking
ENABLE_COST_TRACKING=true

# Budget limits
# Per session budget in USD
BUDGET_PER_SESSION=1.00

# Per hour budget in USD
BUDGET_PER_HOUR=10.00

# Per day budget in USD
BUDGET_PER_DAY=50.00

# Action when budget exceeded: error, warn, or ignore
BUDGET_EXCEEDED_ACTION=warn

# ============================================================================
# Streaming Configuration
# ============================================================================

# Enable streaming responses
ENABLE_STREAMING=true

# Stream chunk timeout in milliseconds
STREAM_TIMEOUT=30000

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json or text
LOG_FORMAT=json

# Log destination: console or file
LOG_DESTINATION=console

# Log file path (if LOG_DESTINATION=file)
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# Authentication (if implementing user auth)
# ============================================================================

# JWT secret for token signing
JWT_SECRET=your_jwt_secret_here

# JWT expiration time
JWT_EXPIRES_IN=7d

# ============================================================================
# API Rate Limiting
# ============================================================================

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Feature Flags
# ============================================================================

# Enable prompt management UI
ENABLE_PROMPT_MANAGEMENT=true

# Enable variant A/B testing
ENABLE_AB_TESTING=true

# Enable cost analysis dashboard
ENABLE_COST_DASHBOARD=true

# Enable export functionality
ENABLE_EXPORT=true

# ============================================================================
# External Services
# ============================================================================

# Sentry error tracking (optional)
SENTRY_DSN=

# PostHog analytics (optional)
POSTHOG_API_KEY=

# Datadog APM (optional)
DD_API_KEY=

# ============================================================================
# Development Tools
# ============================================================================

# Enable debug mode (verbose logging)
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Enable mock data for testing
ENABLE_MOCK_DATA=false
